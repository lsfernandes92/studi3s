<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %></br></br>

  <%= f.label :location %>
  <%= f.text_field :location, class: 'form-control' %></br></br>

  <%= f.label :date %>
  <%= f.date_select :date, class: 'form-control' %></br></br>

  <%= f.label :time %>
  <%= f.time_select :date, class: 'form-control' %></br></br>

  <%= f.submit 'create event' %>
<% end %>
